<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="account-details">
        <h1>Account Details</h1>

        <p> <strong>Username</strong></p>
        <%= @user.username %>
        <p> <strong>Email Address</strong></p>
        <%= @user.email %></p>
        <p> <strong>Current Avatar</strong></p>
        <p><%= image_tag(@user.avatar, height: "300px", width: "300px") %></p>


        <%= link_to "Edit your account", edit_user_registration_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
