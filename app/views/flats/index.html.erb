<div class="container">

  <div class="row">
    <h1>Flats</h1>

    <% @flats.each do |flat| %>
      <div>
        <%# are there photos attached? if true(?) image sample/random display  %>
        <img src="<%= (flat.photos.attached? ? cl_image_path(flat.photos.sample.key) : asset_path("logo.png"))%>">
        <h4><%= link_to flat.name, flat_path((flat)) %></h4>
        <p>Address: <%= flat.address %></p>
        <p>Description: <%= flat.description  %></p>
        <p>Number of Guests: <%= flat.guest_num  %></p>
        <p>Price per night: â‚¬<%= flat.price_per_night  %></p>
      </div>
    <% end %>
  </div>
</div>
