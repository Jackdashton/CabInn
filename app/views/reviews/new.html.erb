<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">

      <div class="form-login">
        <h1>What did you think of the flat?</h1>

        <%= simple_form_for [@flat, @review] do |f| %>
          <%# Must pass instance of flat to simple form too %>
          <%= f.input :content %>
          <p><strong>Very Dissatisfied = 1, Very Satisfied = 5</strong></p>
          <%= f.input :location, :collection => 1..5 %>
          <%= f.input :cleanliness, :collection => 1..5 %>
          <%= f.input :value, :collection => 1..5 %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
